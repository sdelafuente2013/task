<div class="container mx-auto px-6 pt-6">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-4xl">Recetas</h2>

    <%= link_to 'Nueva Receta', new_recipe_path, class: "py-2 px-4 bg-green-500 text-white rounded hover:bg-green-600 transition duration-150 ease-in-out" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
    <% @recipes.each do |recipe| %>
      <div class="bg-white rounded shadow hover:shadow-lg transition duration-150 ease-in-out">
        <div class="p-6">
          <h3 class="text-2xl font-bold mb-2 text-gray-800"><%= recipe.name %></h3>
          <p class="text-gray-600"><%= recipe.description %></p>

          <div class="mt-4 flex justify-between items-center">
            <%= link_to edit_recipe_path(recipe), class: "text-blue-500 hover:text-blue-600 transition duration-150 ease-in-out" do %>
              <i class="fas fa-edit"></i> Editar
            <% end %>

            <%= link_to recipe, data: { turbo_method: :delete, turbo_confirm: 'EstÃ¡s seguro?' }, class: "text-red-500 hover:text-red-600 transition duration-150 ease-in-out" do %>
              <i class="fas fa-trash-alt"></i> Eliminar
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
