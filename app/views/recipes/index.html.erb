<div class="container mx-auto px-6 pt-6">
  <h2 class="text-4xl mb-6">Recetas</h2>

  <%= link_to 'Nueva Receta', new_recipe_path, class: "py-2 px-4 bg-green-500 text-white rounded" %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
    <% @recipes.each do |recipe| %>
      <div class="bg-white rounded shadow">
        <div class="p-6">
          <h3 class="text-2xl font-bold mb-2"><%= recipe.name %></h3>
          <p><%= recipe.description %></p>

          <div class="mt-4">
            <%= link_to edit_recipe_path(recipe), class: "text-blue-500" do %>
              <i class="fas fa-edit"></i>
            <% end %>

            <%= link_to recipe, data: { turbo_method: :delete, turbo_confirm: 'EstÃ¡s seguro?' }, class: "text-red-500 ml-4" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
